<div class="container">
	<div class="large-7 columns">
		<h1>States</h1>
	</div>
	<div class="large-5 columns text-right">
	</div>
</div>

<div class="container">
	<div class="main_content">

		<% @states.all.in_groups(3, false) do |group| %>
		<div class="large-4 columns">
			<ul>
			  <% group.each do |state| %>
			    <li><%= link_to state.name, state %>
			      (<%= pluralize state.counties.count, "county" %>)
			    </li>
			  <% end %>
			</ul>
		</div>
		<% end %>

	</div>
	<div class="side_content">
		<div class="panel">
			<h3 class="subheader">New State</h3>
			<%= render "states/form" %>
		</div>
	</div>
</div>