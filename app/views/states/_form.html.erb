<%= simple_form_for(@state) do |f| %>
  <div class="row">
    <%= f.error_notification %>
  </div>

    <div class="form-inputs">
      <div class="row">
        <div class="large-8 columns">
          <%= f.input :name %>
        </div>
        <div class="large-4 columns">
          <%= f.input :abbreviation, label: "Abbr." %>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= f.input :due_within_days, 
          	label: "Reconveyances are due within X days", 
          	collection: State.due_within_options %>
          <%= f.input :active %>
        </div>
      </div>
    </div>

    <div class="form-actions row">
      <div class="large-12 columns">
        <%= f.button :submit %>
      </div>
    </div>
  </div></div>
<% end %>
