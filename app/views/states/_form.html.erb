<%= simple_form_for(@state) do |f| %>
  <div class="row">
    <%= f.error_notification %>
  </div>

  <div class="row"><div class="column_6_centered">
    <div class="form-inputs">
      <%= f.input :name %>
      <div class="row">
        <div class="large-4 columns">
          <%= f.input :abbreviation %>
        </div>
        <div class="large-8 columns">
          <%= f.input :due_within_days, 
          	label: "Reconveyances are due within X days", 
          	collection: State.due_within_options %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <div class="column_6">
        <%= f.button :submit %>
      </div>
    </div>
  </div></div>
<% end %>
