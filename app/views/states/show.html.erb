<h1><%= @state.name %></h1>

<dl class="sub-nav">
	<dd><%= link_to 'Edit', edit_state_path(@state) %></dd>
	<dd><%= link_to 'Delete', @state, method: :delete, data: { confirm: 'Are you sure?' } %></dd>
	<dd><%= link_to 'Back', states_path %></dd>
</dl>

<p>
  <strong>Abbreviation:</strong>
  <%= @state.abbreviation %>
</p>

<% if @state.due_within_days.present? %>
	<p>
		Reconveyances are due within <strong><%= @state.due_within_days %></strong> days.
	</p>
<% else %>
	<p>
		Reconveyance due date is unknown. Please <%= link_to "edit the state", edit_state_path(@state) %> to provide this information.
	</p>
<% end %>


<h3>Counties <small><%= link_to "new county", new_state_county_path(@state) %></small></h3>

<ul>
	<% @state.counties.each do |county| %>
	<li><%= link_to county.name, [@state, county] %></li>
	<% end %>
</ul>
