<%= simple_form_for(@lender) do |f| %>
  <div class="row">
    <%= f.error_notification %>
  </div>

    <div class="form-inputs">
      <div class="row">
        <div class="large-8 columns">
          <%= f.input :name %>
        </div>
      </div>
    </div>

    <div class="form-actions row">
      <div class="large-12 columns">
        <%= f.button :submit %>
      </div>
    </div>
  </div></div>
<% end %>
