<h1>Counties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Search url</th>
      <th>Search params</th>
      <th>Search method</th>
      <th>Average days to complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counties.each do |county| %>
      <tr>
        <td><%= county.name %></td>
        <td><%= county.state_id %></td>
        <td><%= county.search_url %></td>
        <td><%= county.search_params %></td>
        <td><%= county.search_method %></td>
        <td><%= county.average_days_to_complete %></td>
        <td><%= link_to 'Show', county %></td>
        <td><%= link_to 'Edit', edit_county_path(county) %></td>
        <td><%= link_to 'Destroy', county, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

