<h1>Counties</h1>

<%= link_to 'New County', new_county_path, class: "small radius button" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Average days to complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counties.each do |county| %>
      <tr>
        <td><%= link_to county.name, [county.state, county] %></td>
        <td><%= link_to county.state.name, county.state %></td>
        <td><%= county.average_days_to_complete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

