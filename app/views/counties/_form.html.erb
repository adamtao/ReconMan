<%= simple_form_for([@state, @county]) do |f| %>
  <div class="row">
    <%= f.error_notification %>
  </div>

  <div class="form-inputs">
    <div class="row">
      <div class="column_6">
        <%= f.input :name %>
      </div>
      <div class="column_6">
        <%#= f.association :state %>
      </div>
    </div>
    <div class="row">
      <div class="column_6">
        <%= f.input :phone %>
      </div>
      <div class="column_6">
        <%= f.input :fax %>
      </div>
    </div>

    <div class="row">
      <div class="large-6 columns">
        <fieldset>
          <legend>County Links</legend>
            <%= f.input :webpage, label: "County webpage", as: :url, placeholder: "http://" %>
            <%= f.input :search_url, label: "Title Search URL", as: :url, placeholder: "http://" %>
            <%= f.input :assessor_webpage, as: :url, placeholder: "http://" %>
            <div class="panel">
              <h4 class="subheader">URL Generator Settings</h4>
              <%= f.input :search_template_url, as: :url, placeholder: "http://foo.com/search?{{params}}#tab=2" %>
              <%= f.input :search_params, placeholder: "searchstring={{deed_of_trust_number}}" %>
              <%= f.input :search_method, as: :select, collection: ["GET", "POST"] %>
            </div>
        </fieldset>
      </div>
      <div class="large-6 columns">
        <fieldset>
          <legend>Contact Details</legend>
          <div class="row">
            <div class="column_6">
              <%= f.input :contact_name %>
            </div>
            <div class="column_6">
              <%= f.input :contact_phone %>
            </div>
          </div>
          <div class="row">
            <div class="column_12">
              <%= f.input :contact_email %>
            </div>
          </div>
        </fieldset>
        <fieldset>
          <legend>Simplifile</legend>
          <%= f.input :simplifile %>
          <div class="row">
            <div class="column_6">
              <%= f.input :s_contact_name, label: "Contact name" %>
            </div>
            <div class="column_6">
              <%= f.input :s_contact_phone, label: "Phone" %>
            </div>
          </div>
          <div class="row">
            <div class="column_12">
              <%= f.input :s_contact_email, label: "Email", as: :email %>
            </div>
          </div>
        </fieldset>
        <%= f.input :co_fee_schedule %>
      </div>
    </div>

    <%= f.label :notes, "Helpful Tips & Notes" %>
    <%= f.textile_editor :notes, rows: 15 %>
    <span class="hint">What would be helpful for a new person to know about working with this county?</span>
    <%= textile_editor_initialize %>

    <br/>
    <div class="panel">
      <%= f.input :zip_codes, hint: "Comma separated list" %>
    </div>

  </div>

  <div class="form-actions">
  	<div class="large-12 columns">
      <%= f.button :submit %>
  	</div>
  </div>
<% end %>
