<div class="container clearfix">
	<div class="large-7 small-7 columns">
		<h1><%= @product.name %></h1>
	</div>
	<div class="large-5 small-5 columns">
		<br/>
    <ul class="button-group right">
      <li><%= link_to 'Edit', edit_product_path(@product), class: "tiny button" %></li>
      <li><%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "tiny alert button" %></li>
    </ul>
	</div>
</div>

<div class="main_content">
	<p>
	  Standard Price:
	  <%=humanized_money_with_symbol @product.price %>
	</p>

	<p>
	  <%= @product.description %>
	</p>

	<%= render 'shared/ownable_stats', item: @product %>
</div>
