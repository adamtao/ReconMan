<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :default, label: "All new jobs should have this product added by default." %>
    <%= f.input :performs_search, label: "This service involves performing a recurring web search." %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
