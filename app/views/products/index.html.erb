<h1>Products</h1>

<%= link_to 'New Product', new_product_path, class: "small button" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Default Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%=humanized_money_with_symbol product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

