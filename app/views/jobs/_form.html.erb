<%= simple_form_for(@job) do |f| %>
  <div class="row">
    <%= f.error_notification %>
  </div>

  <div class="form-inputs">
    <div class="row">
      <div class="column_6">
        <%= f.input :parcel_number %>
      </div>
    </div>
    <div class="row">
      <div class="column_6">
        <%= f.association :client, collection: all_clients %>
      </div>
      <div class="column_6">
        <%= f.association :requestor, collection: all_clients, as: :grouped_select, group_method: :users %>
      </div>
    </div>
    <div class="row">
      <div class="column_6">
        <%= f.input :address %>
      </div>
      <div class="large-4 small-8 columns">
        <%= f.input :city %>
      </div>
      <div class="large-2 small-4 columns">
        <%= f.input :zipcode %>
      </div>
    </div>
    <div class="row">
      <div class="column_6">
        <%= f.association :state, collection: all_states %>
      </div>
      <div class="column_6">
        <%= f.association :county, collection: all_states, as: :grouped_select, group_method: :counties %>
      </div>
    </div>
    <div class="row">
      <div class="column_6">
        <%= f.input :old_owner %>
      </div>
      <div class="column_6">
        <%= f.input :new_owner %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="column_6">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
