<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="large-6 columns">
        <%= f.input :name, label: "Job Name" %>
      </div>
      <div class="large-6 columns">
        <%= f.association :client %>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <%= f.input :address %>
      </div>
      <div class="large-6 columns">
        <%= f.association :county %>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <%= f.input :city %>
      </div>
      <div class="large-2 columns">
        <%= f.input :state %>
      </div>
      <div class="large-4 columns">
        <%= f.input :zipcode %>
      </div>
    </div>    
    <div class="row">
      <div class="large-6 columns">
        <%= f.input :old_owner %>
      </div>
      <div class="large-6 columns">
        <%= f.input :new_owner %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
