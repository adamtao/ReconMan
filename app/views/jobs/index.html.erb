<h1>Jobs</h1>

<%= link_to 'New Job', new_job_path, class: "small button" %>

<table>
  <thead>
    <tr>
      <th>Parcel</th>
      <th>State, County</th>
      <th>Client</th>
      <th>Created</th>
      <th>Due</th>
      <th colspan="2">Reconveyance</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.parcel_number, job %></td>
        <td><%= link_to job.state.name, job.state %>, <%= link_to job.county.name, [job.state, job.county] %></td>
        <td><%= link_to job.requestor.name, job.requestor %>
            / <%= link_to job.client.name, job.client %>
        </td>
        <td><%=l job.created_at.to_date, format: :short %></td>
            <% if job.dashboard_product %>
              <td <% if job.dashboard_product.late? %>class="late"<% end %>>
                <% if job.dashboard_product.due_on.present? %>
                  <%=l job.dashboard_product.due_on, format: :short %>
                <% end %>
              </td>
            <td>
              <%= check_box_tag job.dashboard_product.id, 
                  job.dashboard_product.id, 
                  job.dashboard_product.complete?, 
                  class: job.dashboard_product.complete? ? 'incompleter' : 'completer',
                  data: {
                    job: job.id,
                    job_product: job.dashboard_product.id,
                  } %>
            </td>
            <td>
              <% if !!(job.dashboard_product.quick_search_url) %>
                <%= link_to "search", job.dashboard_product.quick_search_url, target: "_blank" %>
              <% end %>
            </td>
        <% else %>
          <td colspan="3" class="text-center"><i>(reconveyance n/a)</i></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


