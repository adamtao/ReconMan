<%= simple_form_for [@client, @user] do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :name %>
		<%= f.input :email %>
		<%= f.input :role, collection: User.roles.keys.map {|role| [role.titleize,role]}, as: :radio_buttons %>
		<%= f.association :branch, collection: @client.branches, label: "#{@client.name} Branch" %>
		<%= f.input :password, label: "Initial password" %>
		<%= f.input :password_confirmation %>
	</div>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>
<% end %>