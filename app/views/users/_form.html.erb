<%= simple_form_for @user do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :name %>
		<%= f.input :email %>
		<%= f.input :role, collection: User.roles.keys.map {|role| [role.titleize,role]}, as: :radio_buttons %>
	</div>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>
<% end %>