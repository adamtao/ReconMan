<%= simple_form_for(@client) do |f| %>
  <div class="row">
    <%= f.error_notification %>
  </div>

<div class="row"><div class="column_6_centered">

  <div class="form-inputs">
  	<div class="row">
  		<div class="column_12">
    		<%= f.input :name %>
    	</div>
    </div>
  </div>

  <div class="form-actions">
    <div class="column_6">
      <%= f.button :submit %>
    </div>
  </div>

</div></div>
<% end %>
