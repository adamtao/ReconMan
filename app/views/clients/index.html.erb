<div class="container">
	<div class="large-8 columns">
		<h1>Clients</h1>
	</div>
	<div class="large-4 columns text-right">
	</div>
</div>


<div class="main_content">

	<% @clients.in_groups(3, false) do |group| %>
	<div class="large-4 columns">
		<ul>
		  <% group.each do |client| %>
		    <li><%= link_to client.name, client %> (<%= client.jobs.count %>)</li>
		  <% end %>
		</ul>
	</div>
	<% end %>
</div>

<div class="side_content">
	<div class="panel">
		<h3 class="subheader">New Client:</h4>
		<%= simple_form_for(@client) do |f| %>
		  <%= f.error_notification %>

			<div class="row collapse">
				<div class="large-8 small-8 columns">
		    		<%= f.input :name, label: false, placeholder: "Client name" %>
		    	</div>
		    	<div class="large-4 small-4 columns">
					<%= f.button :submit, class: "postfix button" %>
				</div>
		    </div>
		  </div>

		<% end %>
	</div>

</div>