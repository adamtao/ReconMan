<div class="container">
  <div class="large-6 columns">
    <h1><%= @branch.name %> <small>a branch of <%= link_to @client.name, @client %></small></h1>
  </div>
  <div class="large-6 columns text-right">
    <br/>
    <%= link_to 'Edit Branch', edit_client_branch_path(@client, @branch), class: "tiny button" %>
    <%= link_to 'Delete', [@client, @branch], method: :delete, data: { confirm: 'Are you sure?' }, class: "tiny alert button" %>
  </div>
</div>

<div class="container">
  <div class="main_content">
    
    <h3>Jobs <small><%= link_to 'new job', new_job_path(client_id: @client.id) %></small></h3>

    <%= render 'shared/jobs' %>

  </div>

  <div class="side_content">
    <div class="panel">
      <h4 class="subheader">Branch Address:</h4>
      <p><%= @branch.address %><br/>
        <%= @branch.city %>,
        <%= @branch.state.name %>
        <%= @branch.zipcode %>
      </p>

      <p>
        <%= @branch.phone %>
      </p>
    </div>

    <div class="panel">
      <h4 class="subheader">Employees <small><%= link_to 'new employee', new_client_user_path(@branch.client) %></small></h4>
      <ul>
        <% @branch.users.each do |user| %>
        <li><%= link_to user.email, user %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>