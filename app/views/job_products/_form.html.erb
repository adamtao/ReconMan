<%= simple_form_for(@job_product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product_id %>
    <%= f.input :job_id %>
    <%= f.input :price %>
    <%= f.input :workflow_state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
