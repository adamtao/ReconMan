<div class="container">
  <div class="large-8 columns">
    <h1><%= @report.title %></h1>
    <h4 class="subheader"><%= @report.subtitle %></h4>
  </div>
  <div class="large-4 columns">
    <div class="text-right">
      <%= simple_form_for @report, url: reports_path(format: :xls) do |f| %>
        <%= f.input :job_status, as: :hidden %>
        <%= f.input :start_on, as: :hidden %>
        <%= f.input :end_on, as: :hidden %>
        <%= f.input :client_id, as: :hidden %>
        <%= f.input :lender_id, as: :hidden %>
        <%= f.input :show_pricing, as: :hidden %>
        <%= f.button :submit, 'Export to Excel', class: 'tiny success button' %>
      <% end %>
    </div>
  </div>
</div>
<br/>
<table id="jobs" class="full_width">
  <thead>
    <tr>
      <th>File</th>
      <th>Client</th>
      <th>Escrow Officer</th>
      <th>Close Date</th>
      <th>Lender</th>
      <th>DOT #</th>
      <th>Release #</th>
      <th>Release Date</th>
      <% if @report.show_pricing? %>
        <th>Price</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @report.job_products.each do |job_product| %>
      <tr>
        <td><%= job_product.job.file_number %></td>
        <td><%= job_product.job.client.name if job_product.job.client %></td>
        <td><%= job_product.job.requestor.name if job_product.job.requestor %></td>
        <td><%= job_product.job.close_on.to_s if job_product.job.close_on.present? %></td>
        <td><%= job_product.lender.name if job_product.lender %></td>
        <td><%= job_product.deed_of_trust_number %></td>
        <td><%= job_product.new_deed_of_trust_number %></td>
        <td><%= job_product.recorded_on.to_s if job_product.recorded_on.present? %></td>
        <% if @report.show_pricing? %>
          <td class="text-right"><%= job_product.price %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <% if @report.show_pricing? %>
    <tfoot>
      <tr>
        <td colspan="8" class="text-right">
          Total
        </td>
        <td class="text-right">
          <%= @report.total %>
        </td>
      </tr>
    </tfoot>
  <% end %>
</table>

